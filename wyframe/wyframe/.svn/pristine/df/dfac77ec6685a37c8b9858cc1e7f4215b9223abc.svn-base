@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>微信公众号管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Wx_main.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="Wx_mainTableToolbar" role="group">
                            @if(shiro.hasPermission("/wx_main/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Wx_main.openAddWx_main()"/>
                            @}
                            @if(shiro.hasPermission("/wx_main/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Wx_main.openWx_mainDetail_update()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/wx_main/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Wx_main.delete()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/wx_main/export")){
                                <#button name="导出" icon="fa-file-excel-o" clickFun="Wx_main.export()" space="true"/>
                            @}
                             @if(shiro.hasPermission("/wx_main/detail")){
                                <#button name="管理" icon="fa-file-code-o" clickFun="Wx_main.openWx_mainDetail()" space="true"/>
                            @}
                        </div>
                        <#table id="Wx_mainTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/addons/zcgl/gongzhonghao/js/wx_main.js"></script>
@}
