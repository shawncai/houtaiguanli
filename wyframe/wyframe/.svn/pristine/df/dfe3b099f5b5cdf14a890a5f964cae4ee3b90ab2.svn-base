@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>订单管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Xyd_total.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="Xyd_totalTableToolbar" role="group">
                            @if(shiro.hasPermission("/xyd_total/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Xyd_total.openAddXyd_total()"/>
                            @}
                            @if(shiro.hasPermission("/xyd_total/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Xyd_total.openXyd_totalDetail_update()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/xyd_total/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Xyd_total.delete()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/xyd_total/export")){
                                <#button name="导出" icon="fa-file-excel-o" clickFun="Xyd_total.export()" space="true"/>
                            @}
                             @if(shiro.hasPermission("/xyd_total/detail")){
                                <#button name="详情" icon="fa-file-code-o" clickFun="Xyd_total.openXyd_totalDetail()" space="true"/>
                            @}
                        </div>
                        <#table id="Xyd_totalTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/addons/zcgl/orde/js/xyd_total.js"></script>
@}
