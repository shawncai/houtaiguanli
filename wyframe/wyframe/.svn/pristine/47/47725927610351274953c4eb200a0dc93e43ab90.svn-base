@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>订单管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-2">
                                <#NameCon id="condition"  placeholder="收货人/收货人地址/收货人电话/全部地址/" />
                            </div>
                             <#selectSeach name="订单状态" id="bill_st_id" map="${map12}" />
                             <#selectSeach name="配送状态" id="send_st" map="${map18}" />
                             <#selectSeach name="删除状态" id="xyd_st_id" map="${map26}" />
                            <div class="col-sm-1">
                                <#button name="搜索" icon="fa-search" clickFun="Bs_bill.search()" />
                            </div>
                        </div>
                        <div class="hidden-xs demoTable" id="demoTable" role="group">
                            @if(shiro.hasPermission("/bs_bill/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Bs_bill.openAddBs_bill()" />
                            @}
                            @if(shiro.hasPermission("/bs_bill/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Bs_bill.delete()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/bs_bill/export")){
                                <#button name="导出" icon="fa-file-excel-o" clickFun="Bs_bill.export()" space="true"/>
                            @}
                        </div>
                        <#layUITable id="Bs_billTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="barDemo">
    @if(shiro.hasPermission("/bs_bill/update")){
    <a class="btn btn-outline btn-default"  lay-event="edit" title="修改"><i class="fa fa-edit"></i></a>
    @}
    @if(shiro.hasPermission("/bs_bill/detail")){
    <a class="btn btn-outline btn-default"  lay-event="detail" title="详情"><i class="fa fa-file-text"></i></a>
    @}
    @if(shiro.hasPermission("/bs_bill/sendUpdate")){
    <a class="btn btn-outline btn-default"  lay-event="song" title="配送"><i class="fa fa-truck"></i></a>
    @}
    @if(shiro.hasPermission("/bs_bill/print")){
    <a class="btn btn-outline btn-default"  lay-event="print" title="打印"><i class="fa fa-print"></i></a>
    @}
</script>
<script type="text/html" id="photo">
</script>
<script src="${ctxPath}/static/addons/zsh/bs_bill/js/bs_bill.js"></script>
<style>
    .layui-table-cell{
    height:auto;
    line-height: 41px;
}</style>
@}
