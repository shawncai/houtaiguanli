@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>物品管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-lg-2 col-sm-3">
                                <div class="panel panel-default">
                                    <div class="panel-heading">物品分类</div>
                                    <div class="panel-body dept-tree">
                                        <ul id="producttree" class="ztree"></ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-10 col-sm-9">
                                <div class="row">
                                    <div class="col-sm-3 ">

                                <#NameCon id="condition"  placeholder="名称/条码/系列/型号/规格/品牌" />

                                    </div>
                                    <div class="col-sm-3 ">
                                     <div class="input-group">
                                            <div class="input-group-btn">
                                        <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button">操作状态
                                        </button>
                                            </div>
                                    <select class="form-control" id="st_id" onchange="show_sub(this.options[this.options.selectedIndex].value)">

                                        <option value="">请选择</option><option value="-1">停用</option><option value="1">正常</option><option value="2">暂停</option></select>
                                </div>
                                    </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Xgt_goods_product.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="Xgt_goods_productTableToolbar" role="group">
                            @if(shiro.hasPermission("/xgt_goods_product/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Xgt_goods_product.openAddXgt_goods_product()"/>
                            @}
                            @if(shiro.hasPermission("/xgt_goods_product/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Xgt_goods_product.openXgt_goods_productDetail_update()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/xgt_goods_product/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Xgt_goods_product.delete()" space="true"/>
                            @}
                             @if(shiro.hasPermission("/xgt_goods_product/detail")){
                                <#button name="详情" icon="fa-file-code-o" clickFun="Xgt_goods_product.openXgt_goods_productDetail()" space="true"/>
                            @}
                        </div>
                        <#table id="Xgt_goods_productTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/addons/zcgl/products/js/xgt_goods_product.js"></script>
@}
