@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>栏目管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Xgt_wy_item.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="Xgt_wy_itemTableToolbar" role="group">
                            @if(shiro.hasPermission("/xgt_wy_item/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Xgt_wy_item.openAddXgt_wy_item()"/>
                            @}
                            @if(shiro.hasPermission("/xgt_wy_item/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Xgt_wy_item.openXgt_wy_itemDetail_update()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/xgt_wy_item/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Xgt_wy_item.delete()" space="true"/>
                            @}

                             @if(shiro.hasPermission("/xgt_wy_item/detail")){
                                <#button name="详情" icon="fa-file-code-o" clickFun="Xgt_wy_item.openXgt_wy_itemDetail()" space="true"/>
                            @}
                        </div>
                        <#table id="Xgt_wy_itemTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/addons/zcgl/wyitem/js/xgt_wy_item.js"></script>
@}
